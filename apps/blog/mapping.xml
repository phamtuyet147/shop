<?xml version="1.0" encoding="utf-8" ?>
<appMapping xmlns="http://linhnv.xyz/app.mapping">

    <filter>
        <pattern>/*.post</pattern>
        <action>\core\app\FormValidationFilter</action>
    </filter>

    <controller>
        <pattern>/*.view</pattern>
        <action>core\app\AppView</action>
    </controller>

    <controller>
        <pattern>/</pattern>
        <action>\apps\blog\controller\dashboard\ViewDashboard</action>
        <views>
            <view on="success" action="Home.view"/>
        </views>
    </controller>

    <controller>
        <pattern>/admin</pattern>
        <action>\apps\blog\controller\admin\dashboard\ViewAdminDashboard</action>
        <views>
            <view on="success" action="admin/Home.view"/>
        </views>
    </controller>

    <controller>
        <pattern>/admin/articles</pattern>
        <action>\apps\blog\controller\admin\article\ViewArticles</action>
        <views>
            <view on="success" action="admin/Articles.view"/>
        </views>
    </controller>

    <controller>
        <pattern>/admin/articles/post-new</pattern>
        <action>\apps\blog\controller\admin\article\ViewAddArticle</action>
        <views>
            <view on="success" action="admin/UpdateArticle.view"/>
        </views>
    </controller>

    <controller>
        <pattern>/admin/label/AddArticle.post</pattern>
        <action>\apps\blog\controller\admin\label\AddLabel</action>
        <form>UpdateArticle</form>
        <error>/admin/article/post-new</error>
    </controller>

</appMapping>