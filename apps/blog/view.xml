<?xml version="1.0" encoding="utf-8" ?>
<viewConfig xmlns="http://linhnv.xyz/app.view_config">

    <layouts>
        <layout name="BlogTemplate" layout="/view/layout/blog/template.php">
            <part name="header" file="/view/layout/blog/header.php"/>
            <part name="footer" file="/view/layout/blog/footer.php"/>
            <part name="body" file="/view/layout/blog/blank.php"/>
        </layout>

        <layout name="AdminTemplate" layout="/view/layout/admin/template.php">
            <part name="header" file="/view/layout/admin/header.php"/>
            <part name="footer" file="/view/layout/admin/footer.php"/>
            <part name="body" file="/view/layout/admin/blank.php"/>
        </layout>
    </layouts>

    <views>

        <view action="/Home.view" layout="BlogTemplate">
            <part name="body" file="/view/blog/dashboard/home.php"/>
        </view>

        <view action="/admin/Home.view" layout="AdminTemplate">
            <part name="body" file="/view/blog/admin/dashboard/home.php"/>
        </view>

        <view action="/admin/Articles.view" layout="AdminTemplate">
            <part name="body" file="/view/blog/admin/article/index.php"/>
        </view>

        <view action="/admin/UpdateArticle.view" layout="AdminTemplate">
            <part name="body" file="/view/blog/admin/article/update.php"/>
        </view>

    </views>

</viewConfig>